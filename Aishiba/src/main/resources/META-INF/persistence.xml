<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="myPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <!-- Khai báo Hibernate làm provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Danh sách các entity -->
        <class>com.kiendey.model.Toy</class>
        <class>com.kiendey.model.Category</class>
        <class>com.kiendey.model.User</class>
        <class>com.kiendey.model.Order</class>
        <class>com.kiendey.model.OrderItem</class>
        <class>com.kiendey.model.Cart</class>
        <class>com.kiendey.model.CartItem</class>
        <class>com.kiendey.model.Brand</class>
        <class>com.kiendey.model.Coupon</class>
        <class>com.kiendey.model.DeliveryMethod</class>
        <class>com.kiendey.model.PaymentMethod</class>
        <class>com.kiendey.model.Permission</class>
        <class>com.kiendey.model.Role</class>

        <!-- Cấu hình các thuộc tính -->
        <properties>
            <!-- Cấu hình kết nối cơ sở dữ liệu PostgreSQL -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/toy_shop"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="120224"/>

            <!-- Cấu hình dialect cho PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Hiển thị SQL query trong console (tùy chọn để debug) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Tự động tạo bảng dựa trên entity -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>